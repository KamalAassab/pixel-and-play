# =============================================================================
# PIXEL & PLAY - Environment Variables
# =============================================================================
# Copy this file to .env.local for local development
# Never commit .env.local to version control

# -----------------------------------------------------------------------------
# Site Configuration
# -----------------------------------------------------------------------------
# The public URL of your site (used for metadata, SEO, and canonical URLs)
# Local: http://localhost:3000
# Production: https://www.pixel-and-play.vercel.app
NEXT_PUBLIC_SITE_URL=https://www.pixel-and-play.vercel.app

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Rate limiting (requests per minute per IP)
# Recommended: 100 for production, 1000 for development
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Enable/disable security features
ENABLE_RATE_LIMITING=true
ENABLE_STRICT_CSP=true

# -----------------------------------------------------------------------------
# Analytics & Tracking (Optional)
# -----------------------------------------------------------------------------
# Google Analytics Measurement ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Maps API Key (if using embedded maps)
# NEXT_PUBLIC_GOOGLE_MAPS_KEY=

# -----------------------------------------------------------------------------
# External Services (Optional)
# -----------------------------------------------------------------------------
# WhatsApp Business Number (for booking integration)
NEXT_PUBLIC_WHATSAPP_NUMBER=+212XXXXXXXXX

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Set to 'true' to enable debug logging
DEBUG=false

# Node environment (automatically set by Next.js)
# NODE_ENV=development

